{
	"name": "app",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"prepare": "svelte-kit sync",
		"check": "pnpm prepare && (pnpm check:svelte & pnpm check:lint)",
		"check:svelte": "svelte-check --tsconfig ./jsconfig.json",
		"check:lint": "eslint .",
		"check:lint:fix": "eslint . --fix",
		"build": "vite build",
		"dev": "wrangler pages dev .svelte-kit/cloudflare",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest watch",
		"test:unit:coverage": "vitest run --coverage",
		"precommit": "pnpm check && pnpm build",
		"clean:svelte": "rimraf .svelte-kit",
		"clean:node": "rimraf node_modules",
		"clean:powerwash": "(pnpm clean:svelte & pnpm clean:node) && pnpm install"
	},
	"dependencies": {
		"@iconify/svelte": "^3.1.6",
		"@sveltejs/kit": "^2.5.5",
		"@tailwindcss/typography": "^0.5.12",
		"daisyui": "^4.10.1",
		"openai": "4.0.0",
		"svelte": "^4.2.12",
		"tailwindcss": "^3.4.3"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240405.0",
		"@eslint/js": "^8.57.0",
		"@stylistic/eslint-plugin": "^1.7.0",
		"@sveltejs/adapter-cloudflare": "^4.2.1",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@typescript-eslint/eslint-plugin": "^7.6.0",
		"@typescript-eslint/parser": "^7.6.0",
		"@vitest/coverage-v8": "^1.4.0",
		"autoprefixer": "^10.4.19",
		"eslint": "^8.57.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^14.0.0",
		"rimraf": "^5.0.5",
		"svelte-check": "^3.6.9",
		"svelte-eslint-parser": "^0.33.1",
		"typescript": "^5.4.5",
		"vite": "^5.2.8",
		"vitest": "^1.4.0"
	}
}
{
	"name": "app",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"check": "run-p -l format:check lint kit:check",
		"format:check": "prettier --check .",
		"format:write": "prettier --write .",
		"lint": "eslint .",
		"kit:check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"prepare": "svelte-kit sync",
		"build": "vite build",
		"_build:watch": "vite build -w",
		"_wrangler:dev": "wrangler pages dev .svelte-kit/cloudflare",
		"pages:dev": "run-p -l _build:watch _wrangler:dev",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"precommit": "run-s check test:unit",
		"clean": "rimraf vite.config.js.timestamp* .svelte-kit test-results",
		"clean:powerwash": "pnpm clean && rimraf node_modules && pnpm install"
	},
	"dependencies": {
		"@iconify/svelte": "^3.1.6",
		"@sveltejs/kit": "^1.30.3",
		"@tailwindcss/typography": "^0.5.10",
		"daisyui": "^4.6.0",
		"svelte": "^4.2.9",
		"tailwindcss": "^3.4.1"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240117.0",
		"@playwright/test": "^1.41.1",
		"@sveltejs/adapter-cloudflare": "^2.3.4",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@vitest/coverage-v8": "^1.2.1",
		"autoprefixer": "^10.4.17",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.33",
		"prettier": "^3.2.4",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"rimraf": "^5.0.5",
		"svelte-check": "^3.6.3",
		"typescript": "^5.3.3",
		"vite": "^5.0.12",
		"vitest": "^1.2.1"
	}
}

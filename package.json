{
	"name": "app",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"prepare": "svelte-kit sync",
		"check": "pnpm prepare && (pnpm check:svelte & pnpm check:lint)",
		"check:svelte": "svelte-check --tsconfig ./jsconfig.json",
		"check:lint": "eslint .",
		"check:lint:fix": "eslint . --fix",
		"build": "vite build",
		"dev": "vite dev",
		"test:unit": "vitest run",
		"test:unit:watch": "vitest watch",
		"test:unit:coverage": "vitest run --coverage",
		"precommit": "pnpm check && pnpm build",
		"clean:svelte": "rimraf .svelte-kit",
		"clean:node": "rimraf node_modules",
		"clean:powerwash": "(pnpm clean:svelte & pnpm clean:node) && pnpm install"
	},
	"dependencies": {
		"@iconify/svelte": "^4.0.2",
		"@sveltejs/kit": "^2.8.3",
		"@tailwindcss/typography": "^0.5.15",
		"daisyui": "^4.12.13",
		"svelte": "^4.2.19",
		"tailwindcss": "^3.4.14"
	},
	"devDependencies": {
		"@eslint/js": "^9.12.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@sveltejs/adapter-cloudflare": "^4.7.3",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@vitest/coverage-v8": "^2.1.3",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.12.0",
		"eslint-plugin-svelte": "^2.45.1",
		"globals": "^15.11.0",
		"openai": "4.67.3",
		"rimraf": "^6.0.1",
		"svelte-check": "^4.0.5",
		"svelte-eslint-parser": "^0.42.0",
		"typescript": "^5.6.3",
		"vite": "^5.4.9",
		"vitest": "^2.1.3"
	}
}
